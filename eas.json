{
  "cli": {
    "version": ">= 12.2.0",
    "appVersionSource": "remote"
  },

  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "channel": "preview",
      "android": { "buildType": "apk" },
      "installCommand": "npm install"
    },
    "production": {
      "distribution": "store",
      "channel": "production"
    }
  },

  "submit": {
    "production": {
      "android": {
        "track": "internal"
      }
    }
  }
}
