{
  "expo": {
    "name": "nearsy-app",
    "slug": "nearsy-app",
    "scheme": "nearsy",
    "version": "1.0.2",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./src/assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nearsy.app",
      "buildNumber": "4",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Nearsy uses your location to show nearby people while you are using the app.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Nearsy uses your location in the background, only when your visibility is ON, to keep your proximity updated.",
        "NSLocationAlwaysUsageDescription": "Nearsy uses your location in the background, only when your visibility is ON, to keep your proximity updated.",
        "NSPhotoLibraryUsageDescription": "Nearsy needs access to your photos so you can upload images to your profile and gallery.",
        "NSPhotoLibraryAddUsageDescription": "Nearsy needs permission to save images to your photo library when you choose to export or save content.",
        "NSCameraUsageDescription": "Nearsy uses the camera so you can take photos for your profile and gallery.",
        "UIBackgroundModes": ["location"],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.nearsy.app",
      "versionCode": 4,
      "edgeToEdgeEnabled": true,
      "googleServicesFile": "./google-services.json",
      "windowSoftInputMode": "adjustResize",
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "notification": {
      "icon": "./src/assets/notification-icon.png",
      "color": "#3B5A85",
      "channelId": "default"
    },
    "web": {
      "favicon": "./src/assets/icon.png"
    },
    "runtimeVersion": "1.0.2",
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/fdb12a0f-6136-465d-bbf7-1eda6dcc14de"
    },
    "plugins": [
      "@react-native-firebase/app",
      "expo-dev-client",
      "expo-image-picker",
      ["expo-location", { "isAndroidForegroundServiceEnabled": true }],
      [
        "expo-build-properties",
        {
          "android": { "minSdkVersion": 24 },
          "ios": { "useFrameworks": "static" }
        }
      ],
      "expo-notifications",
      "expo-asset",
      "expo-font",
      "expo-web-browser",
      "react-native-edge-to-edge"
    ],
    "extra": {
      "eas": {
        "projectId": "fdb12a0f-6136-465d-bbf7-1eda6dcc14de"
      },
      "EXPO_PUBLIC_ENABLE_SOCIAL_LOGIN": "false",
      "EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID": "557470198780-prau0p14tfrijv3h5omadqakn4r3m4tk.apps.googleusercontent.com",
      "EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID": "557470198780-9qe3qg59h682e3fn14ic97hf9t375m3n.apps.googleusercontent.com",
      "EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID": "557470198780-8ls8o304sfcf8va409va90o6rar3vc5a.apps.googleusercontent.com",
      "EXPO_PUBLIC_APPLE_SERVICE_ID": "com.nearsy.app.signin"
    },
    "owner": "godie.hurtado"
  }
}
